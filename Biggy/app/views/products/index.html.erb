<%= render  "navbar" %>

<div class="container-fluid">

<div class="row mb-4 mt-3"  style="justify-content:space-evenly">
  <% @products.each do |product| %>
    <div class="col-3 m-2 shadow-sm border rounded">
    
      <div class="row no-gutters shadow rounded overflow-hidden flex-md-row m-1 h-md-250 position-relative" ">
      <div class="col-auto d-flex flex-column" style="justify-content:center">
          <%= image_tag product.image_url ,style: 'padding:1rem;height:120px;width:120px;' %>
        </div>
        <div class=" p-4 d-flex flex-column position-static">

          
          <h5 class="mb-0"><%= product.name %></h5>
          <strong class="d-inline-block text-muted">â‚¹<%= product.price %></strong>
          <div class="mb-1 text-muted"><%= product.category %></div>
        </div>
        
        
      </div>
      <div class="d-flex flex-row" style="justify-content:space-evenly;">
      <%= link_to 'Edit', edit_product_path(product) ,:class=>"btn btn-secondary m-2",:style=>"flex:1" %>
      <%= link_to 'Delete', product_path(product),:class=>"btn btn-danger m-2",:style=>"flex:1;background-color:#FC8102;border-color:#FC8102",
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </div>
    </div>

  <% end %>
</div>
  </div>
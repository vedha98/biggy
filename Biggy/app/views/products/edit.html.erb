
<%= form_for @product,:html => { :multipart => true }, :url => product_path(@product) do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
    <p>
    <%= form.label :category %><br>
    <%= form.text_area :category %>
  </p>
    <p>
      <%= form.label :price %><br>
      <%= form.text_area :price %>
    </p>
    <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>